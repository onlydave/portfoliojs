<div class="container">
  <div class='row'>
	<!-- if galleries -->
	{{#if about}}
		{{#each about}}
        <div class="col-sm-8 coll-md-8">
          <h1>{{name}}</h1>
          {{{description}}}
        </div>
				{{#if heroImage}}
				  <div class="col-sm-4 col-md-4 gallery-image">
					  <img src="{{cloudinaryUrl heroImage width='500' height='500'}}" 
                srcset="
                  {{cloudinaryUrl heroImage width='200' height='200'}} 200w,
                  {{cloudinaryUrl heroImage width='400' height='400'}} 400w" class="thumbnail img-responsive">
				  </div>
        {{/if}}
		{{/each}}
  </div>
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}
</div>
